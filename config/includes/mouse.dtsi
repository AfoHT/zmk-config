#include <zephyr/dt-bindings/input/input-event-codes.h>

// Inspired by caksoylar's config

#define ZMK_POINTING_DEFAULT_MOVE_VAL 1500  // 600
#define ZMK_POINTING_DEFAULT_SCRL_VAL 20    // 10

#include <dt-bindings/zmk/pointing.h>
#include <input/processors.dtsi>

&mmv {
    acceleration-exponent = <1>;      // 1
    time-to-max-speed-ms = <500>;     // 300
    trigger-period-ms = <16>;
};

&msc {
    acceleration-exponent = <1>;      // 0
    time-to-max-speed-ms = <40>;      // 300
    trigger-period-ms = <16>;
};

&mmv_input_listener {
    precision {
        layers = <LLEFT>;
        input-processors = <&zip_xy_scaler 1 4>;
    };
};

/ {
    input_processors {
        zip_scroll_scaler: zip_scroll_scaler {
            compatible = "zmk,input-processor-scaler";
            #input-processor-cells = <2>;
            type = <INPUT_EV_REL>;
            codes = <INPUT_REL_WHEEL INPUT_REL_HWHEEL>;
            track-remainders;
        };
    };
};

&msc_input_listener {
    turbo {
        layers = <LLEFT>;
        input-processors = <&zip_scroll_scaler 3 1>;
    };
};

#define M_WH_UP &msc SCRL_UP
#define M_WH_DOWN &msc SCRL_DOWN
#define M_WH_LEFT &msc SCRL_LEFT
#define M_WH_RIGHT &msc SCRL_RIGHT

#define M_UP &mmv MOVE_UP
#define M_DOWN &mmv MOVE_DOWN
#define M_LEFT &mmv MOVE_LEFT
#define M_RIGHT &mmv MOVE_RIGHT

#define M_LCLK &mkp LCLK
#define M_MCLK &mkp MCLK
#define M_RCLK &mkp RCLK
#define M_MB4 &mkp MB4
#define M_MB5 &mkp MB5
